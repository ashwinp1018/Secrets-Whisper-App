<%- include('partials/header') %>
<div class="container mt-5" style="max-width: 500px;">
  <div class="card bg-dark text-white border-0 shadow-lg p-4">
    <div class="card-body">
      <h2 class="card-title mb-4 text-center"><i class="fas fa-user-lock me-2"></i>Login</h2>
      <% if (error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <strong>Error:</strong> <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label class="form-label">Email address</label>
          <input type="email" name="email" class="form-control" required>
        </div>
        <div class="mb-3">
          <label class="form-label">Password</label>
          <input type="password" name="password" class="form-control" required>
        </div>
        <button type="submit" class="btn btn-light w-100 mt-2">Login</button>
      </form>
      <div class="text-center mt-3">
        <small>Don't have an account? <a href="/register" class="link-light">Register here</a></small>
      </div>
    </div>
  </div>
</div>
<%- include('partials/footer') %>